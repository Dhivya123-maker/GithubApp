<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/white_bg"
            android:elevation="3dp"
            android:paddingBottom="40dp">


            <EditText
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_corners"
                android:elevation="2dp"
                android:hint="Owner name"
                android:fontFamily="@font/nunito_semibold"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14dp">

            </EditText>

            <TextView
                android:id="@+id/error1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/owner"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="owner name field is required"
                android:textAlignment="textEnd"
                android:textColor="#E53935"
                android:visibility="gone" />


            <EditText
                android:id="@+id/repository"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/error1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_corners"
                android:elevation="2dp"
                android:hint="Repository name"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14dp">

            </EditText>

            <TextView
                android:id="@+id/error2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/repository"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/nunito_semibold"
                android:text="repository name field is required"
                android:textColor="#E53935"
                android:visibility="gone" />


            <Button
                android:id="@+id/add_repo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/error2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_bg"
                android:elevation="2dp"
                android:fontFamily="@font/nunito_semibold"
                android:letterSpacing="0.01"
                android:text="Add Repository"
                android:textColor="@color/white" />


        </RelativeLayout>

    </RelativeLayout>
